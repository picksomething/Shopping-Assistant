<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

    <ImageView
        android:id="@+id/goodItem_icon"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_alignParentStart="true"
        android:contentDescription="@string/app_name"
        android:padding="5dp"
        android:src="@drawable/ic_launcher"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/goodItem_icon"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:id="@+id/goodItem_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/goodItem_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textColor="@color/red"/>

        <ImageView
            android:id="@+id/goodItem_price_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textColor="@color/red"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/goodItem_source"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_marginTop="20dp"
            android:textColor="@color/blue"/>
    </LinearLayout>

</RelativeLayout><!-- From: file:/Users/caobin/project/Shopping-Assistant/res/layout/goods_item.xml -->